# Environment variables for Docker development environment
# Copy this file to .env and customize as needed

# MariaDB
MARIADB_ROOT_PASSWORD=your-secure-root-password
MARIADB_USER=dev
MARIADB_PASSWORD=dev123
MARIADB_DATABASE=app_db

# PostgreSQL
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_USER=dev
POSTGRES_DB=app_db

# MongoDB
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=your-secure-mongo-password
MONGO_INITDB_DATABASE=app_db

# Redis (optional password)
# REDIS_PASSWORD=your-redis-password

# Portainer
PORTAINER_PASSWORD=your-portainer-password

# pgAdmin
PGADMIN_DEFAULT_EMAIL=dev@example.com
PGADMIN_DEFAULT_PASSWORD=your-pgadmin-password

# MongoDB Express
ME_CONFIG_BASICAUTH_USERNAME=dev
ME_CONFIG_BASICAUTH_PASSWORD=your-mongo-express-password

# Application specific
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost

# Database connections
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=app_db
DB_USERNAME=dev
DB_PASSWORD=dev123

# PostgreSQL connection
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=app_db
PG_USERNAME=dev
PG_PASSWORD=dev123

# MongoDB connection
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DATABASE=app_db
MONGO_USERNAME=root
MONGO_PASSWORD=your-secure-mongo-password

# Redis connection
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email (MailHog)
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=

# Additional services
ADMINER_URL=http://localhost:8080
PGADMIN_URL=http://localhost:5050
MONGO_EXPRESS_URL=http://localhost:8081
REDIS_COMMANDER_URL=http://localhost:8082
MAILHOG_URL=http://localhost:8025
PORTAINER_URL=http://localhost:9000